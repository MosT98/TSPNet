@model MyPhotosWEB.Pages.Folders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FolderDTO[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FolderDTO[0].Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FolderDTO[0].UserUserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FolderDTO) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserUserId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FolderId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FolderId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FolderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
